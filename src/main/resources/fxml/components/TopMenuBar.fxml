<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<MenuBar prefHeight="30.0" prefWidth="500.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="">
    <menus>
        <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem mnemonicParsing="false" text="Import Photos..." />
                <MenuItem mnemonicParsing="false" text="Export Photos..." />
                <MenuItem mnemonicParsing="false" text="Quit" />
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
            <items>
                <MenuItem mnemonicParsing="false" text="Undo (CTRL+Z)" />
            <MenuItem mnemonicParsing="false" text="Redo (CTRL+V)" />
            <MenuItem mnemonicParsing="false" text="Copy (CTRL+C)" />
            <MenuItem mnemonicParsing="false" text="Paste (CTRL+V)" />
            <MenuItem mnemonicParsing="false" text="Cut (CTRL+X)" />
            </items>
        </Menu>
      <Menu mnemonicParsing="false" text="Settings">
         <items>
            <MenuItem mnemonicParsing="false" text="Edit Preferences" />
            <MenuItem mnemonicParsing="false" text="Modify Style &amp; Colors" />
         </items>
      </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <items>
                <MenuItem mnemonicParsing="false" text="About ExifExplorer" />
            <MenuItem mnemonicParsing="false" text="Credits" />
            </items>
        </Menu>
    </menus>
</MenuBar>
